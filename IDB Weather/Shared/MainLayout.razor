@inherits LayoutComponentBase

<PageTitle>IDB Weather</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="row" style="width: 100%">
                <div class="col-1">  
                    <img src="/images/IDB-Logo.png" style="height:35px" />
                </div>
                <div class="col-3">
                    <div style="display: flex; margin-top: 4px">
                        <FluentTextField Placeholder="Search city" style="width: 100%" />
                        <FluentButton style="margin-left: 1px" Appearance="Appearance.Stealth">
                            <span class="oi oi-magnifying-glass"></span>
                        </FluentButton>
                       <FluentButton style="margin-left: 7px" Appearance="Appearance.Stealth">
                            <span class="oi oi-map-marker"></span>
                        </FluentButton>
                    </div>
                </div>
                <div class="col-7">
                    <div style="margin: 8px 40px">
                        <span class="labelSmall">Fahrenheit</span>
                        &nbsp;
                        <FluentSwitch @bind-Value="@Unit" style="vertical-align: middle"></FluentSwitch>
                        &nbsp;
                        <span class="labelSmall">Celsius</span>
                    </div>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code
{
    bool Unit = false;
}